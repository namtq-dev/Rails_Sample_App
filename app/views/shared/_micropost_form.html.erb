<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".new_micropost") %>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :images, :multiple => true, accept: Settings.micropost.accept_format %>
  </span>
  <div id="preview"></div>
<% end %>

<%= javascript_pack_tag "micropost" %>
