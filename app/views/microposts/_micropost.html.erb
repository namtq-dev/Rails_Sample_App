<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.validate.length.length_50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %> <br>
    <% micropost.images.each do |image| %>
      <%= image_tag micropost.display_image(image) %>
    <% end %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %>
    <%= time_ago_in_words(micropost.created_at) %>
    <%= t ".ago" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t(".delete"), micropost, method: :delete,
      data: { confirm: t(".you_sure") } %>
    <% end %>
  </span>
</li>
